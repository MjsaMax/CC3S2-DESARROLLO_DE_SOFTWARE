{
  "terraform": {
    "required_version": ">= 1.0"
  },
  "variable": {
    "instance_count": {
      "type": "number",
      "default": 3
    },
    "app_name": {
      "type": "string",
      "default": "myapp"
    }
  },
  "resource": {
    "null_resource": {
      "app_instance": {
        "triggers": {
          "name": "${var.app_name}",
          "count": "${var.instance_count}"
        }
      }
    }
  },
  "output": {
    "app_name": {
      "value": "${var.app_name}"
    }
  }
}